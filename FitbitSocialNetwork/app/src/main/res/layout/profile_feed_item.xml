<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rectangle"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:id="@+id/newsFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/newsFeedUserImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="false"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/newsFeedUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shibunath Shankar"
            android:textSize="22sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="posted" />

    </LinearLayout>


    <TextView
        android:id="@+id/newsFeedDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="I just earned a new badge of 5,000 steps in a day"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/newsFeedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:maxLength="10"
        android:text="2016-12-23"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newsFeedLikeCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1 Likes" />

        <TextView
            android:id="@+id/newsFeedCommentCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="0 Comments"
            android:textAlignment="viewEnd"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>